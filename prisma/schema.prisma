// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  description String?
  category    String   @default("General")
  isRecommended Boolean @default(false)
  createdAt   DateTime @default(now())
}